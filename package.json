    "build": "npm -w ui run build",
    "start": "npm -w backend start",
    "ui": "npm -w ui run"
  },
  "workspaces": [
    "backend",
    "ui"
  ],
  "overrides": {
    "fork-me-on-github": {
      "react": ">=16.8.6",
      "react-dom": ">=16.8.6"
    }
  }
}
